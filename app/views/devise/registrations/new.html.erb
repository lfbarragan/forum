<div class="mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet">
  <h2>Sign up</h2>

  <%= devise_error_messages! %>
</div>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet') do |f| %>
    <div class="mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-textfield mdl-js-textfield">
      <%= f.label :email, class: 'mdl-textfield__label' %>
      <%= f.email_field :email, autofocus: true, class: 'mdl-textfield__input' %>
    </div>

    <div class="mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-textfield mdl-js-textfield">
      <%= f.label :password, class: 'mdl-textfield__label' %>
      <%= f.password_field :password, autocomplete: "off", class: 'mdl-textfield__input' %>
    </div>

    <div class="mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet mdl-textfield mdl-js-textfield">
      <%= f.label :password_confirmation, class: 'mdl-textfield__label' %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'mdl-textfield__input' %>
    </div>

    <div class="mdl-cell mdl-cell--12-col mdl-cell--12-col-tablet">
      <%= f.submit 'Sign up', class: 'mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored' %>
      <label>or you can </label>
      <%= render 'devise/shared/links' %>
    </div>

<% end %>
