<%= form_for(post) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <% if @post.parent.blank? && params[:parent_id].blank? %>
    <div class="field">
      <%= f.label :title %>
      <%= f.text_area :title %>
    </div>
  <% elsif params[:parent_id].present? %>
    <%= f.hidden_field :parent_id, value: params['parent_id'] %>
  <% end %>

  <div class="field">
    <%= f.label :message %>
    <%= f.text_area :message %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
