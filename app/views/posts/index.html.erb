<p id="notice"><%= notice || params[:errors] %></p>

<h1>Posts</h1>
<%= link_to 'New Post', new_post_path %>
<% @posts.each do |post| %>
  <div class="row">
    <%= link_to post do %>
      <div class="col-md-6">
        <%= post.title.truncate(50) %>
        <br>
        Last reply: <%= post.posts.last.created_at.strftime('%d/%m/%Y at %H:%M') %>
      </div>
      <div class="col-md-5">
        author: <%= post.user.email %>
      </div>
    <% end %>
    <div class="col-md-1">
      <% if can? :destroy, post %>
          <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </div>
  </div>
<% end %>


