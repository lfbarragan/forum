<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <%= link_to post_path(post) do %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.message %></td>
          <td><%= link_to 'Show', post %></td>
          <td>
            <% if can? :update, @post %>
              <%= link_to 'Edit', edit_post_path(post) %>
            <% end %>
          </td>
          <td>
            <% if can? :destroy, post %>
              <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
