<p id="notice"><%= notice %></p>

<h1>Users</h1>
<div class="row">
  <div class="col-md-3">Email</div>
</div>

<% @users.each do |user| %>
  <div class="row user-row">
    <div class="col-md-3"><%= user.email %></div>
    <div class="col-md-1"><%= link_to 'Show', user, class: 'btn btn-default btn-primary' %></div>
    <div class="col-md-1"><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-default btn-info' %></div>
    <div class="col-md-1"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-danger' %></div>
  </div>
<% end %>
